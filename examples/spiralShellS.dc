/* Lined Spiral */

waveStrength=15;

//border lines
topline=line(100,150,900,150);
weight(topline,waveStrength+5);
botline=line(100,570,900,570);
weight(botline,waveStrength+5);

//CURVE 0 : bottom
  //parameters
  xold=WIDTH/2-311; //previous x value
  yold=HEIGHT/2+14; //previous y value
  centerx=xold; //center x
  centery=yold; //center y
  a = 4; //line amplifier
  degree = 11; //rotation degree
  
  spiral=group();
  
  //iteration for spiral
  repeat i=1:36:
    //create coordinates parametrically
    xnew = a * i * cos(i*degree+109) + WIDTH/2-311;
    ynew = a * i * sin(i*degree+109) + HEIGHT/2+14;
    weight(line(xold, yold, xnew, ynew),waveStrength);
    
    
    //adjust endpoints for next step
    xold = xnew;
    yold=ynew;
    
  end


